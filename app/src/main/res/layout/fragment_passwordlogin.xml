<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        tools:context=".ui.login.password.PasswordLoginFragment">

    <ImageView
            android:id="@+id/imageView_patternLogin_profile"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="24dp"
            android:contentDescription="@string/imageView_contentDescription"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:id="@+id/textView_patternLogin_authorization"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textAppearance="@style/H2WithDarkTextColor"
            android:text="@string/patternLogin_authorization"
            app:layout_constraintTop_toBottomOf="@id/imageView_patternLogin_profile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:id="@+id/textView_patternLogin_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textAppearance="@style/Body3WithTextColor"
            android:text="@string/patternLogin_messageEnterPassword"
            app:layout_constraintTop_toBottomOf="@id/textView_patternLogin_authorization"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.card.MaterialCardView
            style="@style/Widget.MaterialComponents.CardView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="16dp"
            android:clipToPadding="false"
            app:contentPadding="16dp"
            app:cardBackgroundColor="@color/white"
            app:elevation="0dp"
            app:cardCornerRadius="8dp"
            app:layout_constraintTop_toBottomOf="@id/textView_patternLogin_message"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/textView_patternLogin_skipToPattern">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintEnabled="false"
                    app:boxStrokeColor="@color/darkText"
                    app:boxBackgroundColor="@color/white"
                    app:endIconMode="password_toggle">

                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/textInputEditText_passwordLogin_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:hint="@string/hint_passwordLogin_empty"
                        android:gravity="center"/>

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                    android:id="@+id/textView_passwordLogin_passwordRules"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:text="@string/passwordLogin_passwordRules"
                    android:textAppearance="@style/CaptionWithDarkTextColor"/>

            <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxStrokeColor="@color/darkText"
                    app:hintEnabled="false"
                    app:boxBackgroundColor="@color/white"
                    app:endIconMode="password_toggle">

                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/textInputEditText_passwordLogin_repeatPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:hint="@string/hint_passwordLogin_empty"
                        android:gravity="center"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                    style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                    android:id="@+id/materialButton_passwordLogin_continue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:textAppearance="@style/H1WithDarkTextColor"
                    android:minHeight="56dp"
                    android:enabled="false"
                    android:textAllCaps="false"
                    android:text="@string/passwordLogin_continue"
                    app:backgroundTint="@color/colorPrimaryDark"
                    app:cornerRadius="24dp" />
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <TextView
            android:id="@+id/textView_patternLogin_skipToPattern"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:textAppearance="@style/H1"
            android:text="@string/patternLogin_skipToPattern"
            android:textColor="@color/colorTertiary"
            android:gravity="center"
            android:drawablePadding="8dp"
            app:drawableEndCompat="@drawable/ic_arrow_forward"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>