<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background">
    <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:civ_border="false"
            android:src="@drawable/all_circleshape"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/textView_emailValidation_header"
            android:layout_marginBottom="20dp"/>

    <TextView
            android:text="@string/emailVerification_emailVerification"
            style="@style/H2WithDarkTextColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_emailValidation_header" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@+id/textView_emailValidation_guid"/>
    <TextView
            style="@style/Body3WithTextColor"
            android:text="@string/emailVerification_guid"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/textView_emailValidation_guid" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintBottom_toTopOf="@+id/cardView_emailValidation_phoneInput"
            android:layout_marginBottom="20dp"/>
    <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="156dp"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/cardView_emailValidation_phoneInput"
            app:cardCornerRadius="10dp">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="296dp"
                    android:layout_height="48dp"
                    android:background="@drawable/all_cornershape"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="20dp"
                    app:layout_constraintBottom_toTopOf="@+id/button_emailValidation_continue"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp" android:layout_marginTop="20dp">


                <EditText
                        android:id="@+id/editText_emailVerification_emailAddress"
                        android:inputType="textEmailAddress"
                        android:hint="@string/emailValidation_hint"
                        android:background="@null"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="16dp"/>
            </LinearLayout>
            <com.google.android.material.button.MaterialButton
                    android:background="@color/colorPrimaryDark"
                    app:cornerRadius="25dp"
                    style="@style/H1WithWhiteTextColor"
                    android:enabled="false"
                    android:text="@string/all_continue"
                    android:layout_width="296dp"
                    android:layout_height="48dp"
                    android:id="@+id/button_emailValidation_continue"
                    android:layout_marginBottom="20dp"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp"
            />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <TextView
            android:id="@+id/textView_emailValidation_skipToPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/H1WithTertiaryColor"
            android:text="@string/emailVerification_skipToPattern"
            android:gravity="center"
            android:drawablePadding="8dp"
            app:drawableEndCompat="@drawable/icon_arrow_forward_purple_24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView_emailValidation_phoneInput"
            android:layout_marginTop="30dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>