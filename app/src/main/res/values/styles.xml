    <!-- Body2 -->

    <style name="Body2" parent="AppTextViewAppearance">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/Body2TextSize</item>
    </style>

    <style name="Body2WithTextColor" parent="Body2">
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="Body2WithDarkTextColor" parent="Body2">
