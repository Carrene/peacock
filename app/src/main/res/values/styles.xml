    </style>

    <style name="H2WithTextColor" parent="H2">
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="H2WithDarkTextColor" parent="H2">
        <item name="android:textColor">@color/darkText</item>
    </style>

    <!-- Body1 -->

    <style name="Body1" parent="AppTextViewAppearance">
