<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="TextAppearanceBaseMedium" parent="TextAppearance.AppCompat.Subhead">

        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/colorTextDark</item>

    </style>

    <style name="TextAppearanceBaseRegular" parent="TextAppearance.AppCompat.Subhead">

        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/colorTextDark</item>

    </style>

    <style name="TextAppearanceBaseBold" parent="TextAppearance.AppCompat.Subhead">

        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/colorTextDark</item>

    </style>

    <style name="TextAppearanceBaseMediumTitleTextDark" parent="TextAppearanceBaseMedium">

        <item name="android:textSize">16sp</item>

    </style>

    <style name="TextAppearanceBaseMediumTitleText" parent="TextAppearanceBaseMedium">

        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorText</item>

    </style>

    <style name="TextAppearanceRegularUnderTitle" parent="TextAppearanceBaseRegular">

        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
